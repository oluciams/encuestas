<div class="container ">

  {{#if surveys}}

    <a href="/createSurvey" class="btn btn-success mt-3 col-md-2" role="button">Create Survey</a> 
    
    <div class="d-flex flex-wrap mt-3">
      {{#each surveys}}
      <div class="col mb-3">                      
        <div class="card h-100" style="width: 18rem;"> 
          {{#eq @root.emailLoguedUser this.email}}
            <a href="/surveys/delete/{{_id}}?_method=DELETE" class="text-dark text-end mt-1 mx-2"><i class="fas fa-trash-alt"></i></a>             
          {{/eq}}        
            <div class="card-body">
            <h5 class="card-title">{{title}}</h5>                                                  
            <p class="card-text"><small class="text-muted">creado por {{email}}</small></p>                
            <p class="card-text">{{description}}</p>
          </div>
          <div class="card footer">            
            <div class="d-grid gap-2 d-md-flex justify-content-between">           
              <a href="#" class="btn text-muted">{{totalVotes}} Votos</a>  
              <a href="/surveys/{{_id}}" class="btn btn-secondary">Votar</a>                
            </div>            
          </div>          
        </div>                
      </div>  
      {{/each}} 
    </div> 

  {{else}}

    <a href="/createSurvey" class="btn btn-success mt-3 col-md-2" role="button">Create Survey</a>

    <h3 class="text-center mt-3">No hay encuestas</h3>

  {{/if}}
    
</div>