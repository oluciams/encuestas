<div class="container">

  <a href="/" class="btn btn-success mt-3 col-md-2" role="button">Create Survey</a>

  <h4 class="text-center my-4">No hay encuestas</h4>
   
    {{#each surveys}}
      <div class="row">
        <div class="col-3 mt-3">                     
          <div class="card" style="width: 18rem;">
            <a href="/tasks/delete/{{_id}}?_method=DELETE" class="text-dark text-end mt-1 mx-2"><i class="fas fa-trash-alt"></i></a>
            <div class="card-body">
              <h5 class="card-title">{{title}}</h5>                       
              <p class="card-text"><small class="text-muted">creado por</small></p>                
              <p class="card-text">{{description}}</p>
            </div>
            <div class="card footer">
              <div class="d-grid gap-2 d-md-flex justify-content-between">           
                <a href="#" class="btn text-muted">Cantidad votos</a>                   
                <a href="#" class="btn btn-secondary">Votar</a>
              </div>
            </div>          
          </div> 
        </div>         
      </div>    
    {{/each}}

  <div class="container">
    <div class="offset-md-4"> 
    
      <div class="mt-3">
        <a href="" class="text-dark text-decoration-none mt-2 fs-5"><i class="bi bi-arrow-left-square mx-2"></i>Back</a>
      </div>    

      {{#each surveys}}
        <div class="col-6 mt-2 mb-3 border border-2">
          <div class="mt-3 mb-3 mx-3">            
            <h4 class="card-title">{{title}}</h4>
            <p class="card-text"><small class="text-muted">creado por</small></p>   
            <p class="card-text">{{description}}</p>
          </div>  
        </div>

        <div class="col-6 mt-2 mb-3 border border-2">          
            <p class="mx-3 mt-3">Selecciona una opci√≥n:</p>
              {{#each options}}           
              <div class="form-check mx-3 mt-3 mb-3">
                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                {{option}}
                </label>
              </div>             
              {{/each}}
        </div>
        <div class="col-6 d-flex justify-content-end mt-3">
          <a href="#" class="btn btn-success">Votar !</a>
        </div>
      {{/each}}
    </div>
  </div>

    <div class="container">
      <div class="offset-md-4">      

      <div class="mt-3">
        <a href="" class="text-dark mt-2 text-decoration-none"><i class="bi bi-arrow-left-square">Back</i></a>
        <div class="col-6 d-flex justify-content-end">
          <a href="" class="text-secondary text-end mt-1 mx-2"><i class="bi bi-twitter"></i></a>
          <a href="" class="text-secondary text-end mt-1 mx-2"><i class="bi bi-facebook"></i></a>
          <a href="" class="text-secondary text-end mt-1 mx-2"><i class="bi bi-share-fill"></i></a>
        </div>           
      </div>      

      {{#each surveys}}
        <div class="col-6 mt-2 mb-3 border border-2">
          <div class="mt-3 mb-3 mx-3">          
            <h5 class="card-title">{{title}}</h5>
            <p class="card-text"><small class="text-muted">creado por</small></p>   
            <p class="card-text">{{description}}</p>
          </div>  
        </div>

        <div class="col-6 mt-2 mb-3 border border-2">         
          {{#each options}}
          <div class="mt-3 mb-3 mx-3">        
            <small>{{option}}: 2 votes</small>
            <div class="progress">
              <div class="progress-bar bg-info" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">25%</div>
            </div>              
          </div>
          {{/each}}
        </div>    
      {{/each}}
    </div>

</div>
  



</div>
