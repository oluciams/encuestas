<div class="container">
  <div class="offset-md-4"> 
    
    <div class="mt-4 mb-4">
      <a href="/" class="text-dark text-decoration-none mt-2 fs-5"><i class="bi bi-arrow-left-square mx-2"></i>Back</a>
    </div>
       
    <div class="col-6 mt-2 mb-3 border border-2">
      <div class="mt-3 mb-4 mx-3">            
        <h4 class="card-title">{{survey.title}}</h4>
        <p class="card-text"><small class="text-muted">creado por {{user.email}}</small></p>   
        <p class="card-text">{{survey.description}}</p>
      </div>  
    </div>

     <form action="/surveys/{{survey._id}}?_method=PUT" method="POST"> 
      <input type="hidden" name="_method" value="PUT">

      <div class="col-6 mt-4 mb-4 border border-2">          
        <p class="mx-3 mt-3">Selecciona una opción:</p>
          {{#each survey.options}} 
            <div class="form-check mx-3 mt-3 mb-3">
              {{!-- <input class="form-check-input" type="checkbox" value="{{option}}" name="optionSelected" onChange="this.form.submit()"> --}}
              <input class="form-check-input" type="checkbox" value="{{option}}" name="optionSelected">
              <label class="form-check-label" for="flexCheckDefault">
              {{option}}
              </label>
            </div>
          {{/each}}            
      </div>
      <div class="col-6 d-flex justify-content-end mt-3">
        <button type="submit" class="btn btn-success">Votar !</button>
      </div>
    </form>             
  </div>
</div>

