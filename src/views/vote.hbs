<div class="container">
    <div class="offset-md-4"> 
    
      <div class="mt-4 mb-4">
        <a href="/" class="text-dark text-decoration-none mt-2 fs-5"><i class="bi bi-arrow-left-square mx-2"></i>Back</a>
      </div>
       {{#each surveys}}
        <div class="col-6 mt-2 mb-3 border border-2">
          <div class="mt-3 mb-4 mx-3">            
            <h4 class="card-title">{{title}}</h4>
            <p class="card-text"><small class="text-muted">creado por</small></p>   
            <p class="card-text">{{description}}</p>
          </div>  
        </div>

        <div class="col-6 mt-4 mb-4 border border-2">          
          <p class="mx-3 mt-3">Selecciona una opci√≥n:</p>
            {{#each options}}           
            <div class="form-check mx-3 mt-3 mb-3">
              <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
              <label class="form-check-label" for="flexCheckDefault">
              {{option}}
              </label>
            </div>             
            {{/each}}
        </div>
        <div class="col-6 d-flex justify-content-end mt-3">
          <a href="/results" class="btn btn-success">Votar !</a>
        </div>
      {{/each}}
    </div>
</div>