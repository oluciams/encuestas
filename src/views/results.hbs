<div class="container">
  <div class="offset-md-4">  
    <div class="mt-3">
      <a href="/" class="text-dark mt-2 text-decoration-none fs-5"><i class="bi bi-arrow-left-square mx-2"></i>Back</a>
      <div class="col-6 d-flex justify-content-end"> 

        <a data-bs-toggle="modal" data-bs-target="#exampleModal" class="text-secondary text-end mt-1 mx-2"><i class="bi bi-share-fill"></i></a>           
          <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h6 class="modal-title" id="exampleModalLabel">Copy the URL to share this survey</h6>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">                 
                  http://localhost:3000/surveys/{{survey._id}}
                </div>                
              </div>
            </div>
          </div>
        <a href="" class="text-secondary text-end mt-1 mx-2"><i class="bi bi-twitter"></i></a>
        <a href="" class="text-secondary text-end mt-1 mx-2"><i class="bi bi-facebook"></i></a> 
               
      </div>           
    </div>      
      <div class="col-6 mt-4 mb-4 border border-2">
        <div class="mt-3 mb-3 mx-3">          
          <h5 class="card-title">{{survey.title}}</h5>
          <p class="card-text"><small class="text-muted">creado por {{user.email}}</small></p>   
          <p class="card-text">{{survey.description}}</p>
        </div>  
      </div>        
      <div class="col-6 mt-4 mb-4 border border-2">         
        {{#each survey.options}}
        <div class="mt-3 mb-3 mx-3">        
          <small>{{option}}: {{vote}} votes</small>
          <div class="progress">
            <div class="progress-bar bg-info" id="" role="progressbar" style="width: {{porcentage}}%" aria-valuenow="{{vote}}" aria-valuemin="0" aria-valuemax="100">{{porcentage}}%</div>
          </div>              
        </div>
        {{/each}}
      </div>   
  </div>    
</div>